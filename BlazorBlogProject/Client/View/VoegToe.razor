@page "/voegtoe"

@using BlazorBlogProject.Client.ViewModels

@inject IVoegToeViewModel _voegToeViewModel

<h1>Toevoegen eigenaar</h1>
<p>
    Op dit moment hebben we @_voegToeViewModel.TotaalAantalEigenaren gelukkige autobezitters.
</p>

<EditForm Model="@_voegToeViewModel" OnValidSubmit="@_voegToeViewModel.VoegToe">
    
    <DataAnnotationsValidator />

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="omschrijving" class="col=sm-2 col-form-label">Omschrijving</label>
        </div>
        <div class="col-sm-10">
            <InputText id="omschrijving" @bind-Value="_voegToeViewModel.Omschrijving" class="form-control" placeholder="Geef een omschrijving op..." />
            <ValidationMessage For="@(() => _voegToeViewModel.Omschrijving)" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="voornaam" class="col=sm-2 col-form-label">Voornaam</label>
        </div>
        <div class="col-sm-10">
            <InputText id="voornaam" @bind-Value="_voegToeViewModel.Voornaam" class="form-control" placeholder="Geef de voornaam op van de eigenaar..." />
            <ValidationMessage For="@(() => _voegToeViewModel.Voornaam)" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label for="achternaam" class="col=sm-2 col-form-label">Achternaam</label>
        </div>
        <div class="col-sm-10">
            <InputText id="achternaam" @bind-Value="_voegToeViewModel.Achternaam" class="form-control" placeholder="Geef de achternaam op van de eigenaar..." />
            <ValidationMessage For="@(() => _voegToeViewModel.Achternaam)" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-2">
            <label asp-for="regio" class="col=sm-2 col-form-label">Regio</label>
        </div>
        <div class="col-sm-10">
            <InputText id="regio" @bind-Value="_voegToeViewModel.Regio" class="form-control" placeholder="Regio Noord, Midden of Zuid..." />
            <ValidationMessage For="@(() => _voegToeViewModel.Regio)" />
        </div>
    </div>

    <div><ValidationSummary /></div>

    <div>
        <button type="submit" class="btn btn-primary">Voeg Toe</button>&nbsp;
    </div>

</EditForm>

@code
{
    protected override async Task OnInitializedAsync()
    {
        await _voegToeViewModel.GetTotaalAantalEigenaren();
    }
}
